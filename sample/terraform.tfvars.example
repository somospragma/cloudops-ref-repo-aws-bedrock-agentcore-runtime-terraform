# ============================================================================
# Sample Implementation - Terraform Variables Example
# ============================================================================

aws_region  = "us-east-1"
client      = "acme"
project     = "ai-platform"
environment = "prod"

agent_runtimes = {
  customer-service = {
    description   = "Customer service AI agent for handling support inquiries"
    container_uri = "123456789012.dkr.ecr.us-east-1.amazonaws.com/customer-service-agent:v1.0"
    network_mode  = "PUBLIC"
    protocol      = "MCP"

    environment_variables = {
      LOG_LEVEL        = "INFO"
      MODEL_ID         = "anthropic.claude-3-sonnet-20240229-v1:0"
      MAX_TOKENS       = "4096"
      TEMPERATURE      = "0.7"
      ENABLE_STREAMING = "true"
    }

    lifecycle_config = {
      idle_timeout = 1800  # 30 minutes
      max_lifetime = 14400 # 4 hours
    }
  }

  data-analyst = {
    description   = "Data analysis AI agent with advanced analytics capabilities"
    container_uri = "123456789012.dkr.ecr.us-east-1.amazonaws.com/data-analyst-agent:v1.0"
    network_mode  = "PUBLIC"
    protocol      = "MCP"

    environment_variables = {
      LOG_LEVEL      = "DEBUG"
      MODEL_ID       = "anthropic.claude-3-opus-20240229-v1:0"
      ENABLE_TOOLS   = "true"
      CACHE_ENABLED  = "true"
    }

    lifecycle_config = {
      idle_timeout = 3600  # 1 hour
      max_lifetime = 21600 # 6 hours
    }
  }
}

enable_logging     = true
log_retention_days = 90

additional_tags = {
  CostCenter = "AI-Platform"
  Owner      = "AI-Team"
  Compliance = "SOC2"
}
